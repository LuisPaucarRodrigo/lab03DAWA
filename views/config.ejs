<%- include layouts/navbar.ejs %>
<div class="container text-center">
  <div class="row">
    <div class="col-8">
      <h1>Curso : <%= lenguajes %> </h1>
      <div class="row row-cols-1 row-cols-md-2 g-4">
        <div class="col">
          <div class="card">
            <img src="<%= lenguajesimagen %>" class="card-img-top" alt="...">
          </div>
        </div>
      </div><br>
      <h1>Modulos</h1>
      <div class="row row-cols-1 row-cols-md-2 g-4">
      <% for(var i=0; i<modules.length; i++) {%>
        <div class="col">
          <div class="card">
            <img src="https://i.ytimg.com/vi/O6tD2tBl6Hc/maxresdefault.jpg" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"> <%= modules[i] %> </h5>
              <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
            </div>
          </div>
        </div>
      <% } %>
      </div><br>

      <h1>Tipo de Pago</h1>
      <div class="row row-cols-1 row-cols-md-2 g-4">
        <div class="col">
          <div class="card">
            <img src="<%= imagen %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"> <%= pago %> </h5>
              <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
            </div>
          </div>
        </div>
      </div><br>
    </div>
    <div class="col-4">
      <h1>Pago</h1>
      <p>Subtotal = <%= subtotal %></p>
      <p>Descuento = <%= descuento %></p>
      <p>Monto Total = <%= total %></p>
    </div>
  </div>
</div>